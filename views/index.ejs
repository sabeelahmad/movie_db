<% include ./partials/header.ejs %>

    <!-- Jumbotron -->
    <div class="jumbotron jumbotron-fluid text-center">
        <div class="container">
        <h1 class="display-4">Movie Database</h1>
        <p class="lead">A one stop shop for all movie enthusiasts.</p>
        </div>
    </div>

    <!-- Search options -->
    <div class="container text-center">
        <div class="secondary-heading">
            <small>
                <h2>
                    <strong>Search about a movie</strong>
                </h2>
            </small>
        </div>
        <div class="mt-3">
            <a href="#" id="b1" class="btn btn-primary">Search by Movie Name</a>
            <a href="#" id="b2" class="btn btn-primary">Search by Actor Name</a>
            <a href="#" id="b3" class="btn btn-primary">Search by Director Name</a>
            <a href="#" id="b4" class="btn btn-primary">Search by Production Company</a>
        </div>
        <div id="movie-searchbox" class="mt-3 hidden">
            <form action="/movie" method="GET">
                <div class="form-group">
                    <label for="movieSearch">Enter the movie name!</label>
                    <input type="text" class="form-control" name="movie" id="movieSearch" placeholder="Search Movies" required>
                </div>
                <button class="btn btn-primary">Search!</button>
            </form>
        </div>
        <div id="actor-searchbox" class="mt-3 hidden">
            <form action="/actor" method="GET">
                <div class="form-group">
                    <label for="actorSearch">Enter the actor name!</label>
                    <input type="text" class="form-control" name="actor" id="actorSearch" placeholder="Search Actors" required>
                </div>
                <button class="btn btn-primary">Search!</button>
            </form>
        </div>
        <div id="director-searchbox" class="mt-3 hidden">
            <form action="/director" method="GET">
                <div class="form-group">
                    <label for="dirSearch">Enter the director name!</label>
                    <input type="text" class="form-control" name="director" id="dirSearch" placeholder="Search Directors" required>
                </div>
                <button class="btn btn-primary">Search!</button>
            </form>
        </div>
        <div id="productioncompany-searchbox" class="mt-3 hidden">
            <form action="/productioncompany" method="GET">
                <div class="form-group">
                    <label for="pcSearch">Enter the prodcution company name!</label>
                    <input type="text" class="form-control" name="pc" id="pcSearch" placeholder="Search Producers" required> 
                </div>
                <button class="btn btn-primary">Search!</button>
            </form>
        </div>
    </div>

    <!-- Submit options -->
    <div class="container text-center mt-5">
        <div class="secondary-heading">
            <small>
                <h2>
                    <strong>Submit about a movie</strong>
                </h2>
            </small>
            <p>
                Couldn't find details about your favourite movie? Help us expand our database by providing the details!
            </p>
        </div>
        <div>
            <a href="/new" class="btn btn-primary">Submit Movie Details</a>
        </div>
    </div>

    
    <script>
        // minor UI script
        document.getElementById('b1').addEventListener('click', () => {
            document.getElementById('movie-searchbox').classList.toggle('hidden');
            document.getElementById('movie-searchbox').classList.toggle('visible');
        });
        document.getElementById('b2').addEventListener('click', () => {
            document.getElementById('actor-searchbox').classList.toggle('hidden');
            document.getElementById('actor-searchbox').classList.toggle('visible');
        });
        document.getElementById('b3').addEventListener('click', () => {
            document.getElementById('director-searchbox').classList.toggle('hidden');
            document.getElementById('director-searchbox').classList.toggle('visible');
        });
        document.getElementById('b4').addEventListener('click', () => {
            document.getElementById('productioncompany-searchbox').classList.toggle('hidden');
            document.getElementById('productioncompany-searchbox').classList.toggle('visible');
        });
    </script>
<% include ./partials/footer.ejs %>